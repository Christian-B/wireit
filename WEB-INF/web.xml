<?xml version="1.0" encoding="ISO-8859-1"?>
 
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">
 
   <!-- To save as "hello\WEB-INF\web.xml" -->
 
   <servlet>
      <servlet-name>DeleteWireit</servlet-name>
      <servlet-class>uk.ac.manchester.cs.wireit.DeleteWireit</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>ListWireit</servlet-name>
      <servlet-class>uk.ac.manchester.cs.wireit.ListWireit</servlet-class>
   </servlet>
 
   <servlet>
      <servlet-name>RunWireit</servlet-name>
      <servlet-class>uk.ac.manchester.cs.wireit.RunWireit</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>SaveWireit</servlet-name>
      <servlet-class>uk.ac.manchester.cs.wireit.SaveWireit</servlet-class>
   </servlet>
 <!-- Note: All <servlet> elements MUST be grouped together and
         placed IN FRONT of the <servlet-mapping> elements -->
 
   <servlet-mapping>
      <servlet-name>DeleteWireit</servlet-name>
      <url-pattern>/DeleteWireit</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>ListWireit</servlet-name>
      <url-pattern>/ListWireit</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>RunWireit</servlet-name>
      <url-pattern>/RunWireit</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>SaveWireit</servlet-name>
      <url-pattern>/SaveWireit</url-pattern>
   </servlet-mapping>
</web-app>